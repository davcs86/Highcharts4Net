@using Highcharts4Net
@using Highcharts4Net.Library.Enums
@using Highcharts4Net.Library.Options
@{
    Layout = "~/Views/Shared/_LayoutHighcharts.cshtml";
}
@Html.Highcharts4Net().LineChart(settings =>
{
    settings.SetData(s=>
    {
        s.getJSONP = "http://www.highcharts.com/samples/data/jsonp.php?filename=analytics.csv&callback=?";
    });

    settings.Title = new Title
    {
        Text = "Daily visits at www.highcharts.com"
    };
    settings.Subtitle = new Subtitle
    {
        Text = "Source: Google Analytics"
    };
    settings.XAxis = new XAxis
    {
        TickInterval = 7*24*3600*1000,
        TickWidth = 0,
        GridLineWidth = 1,
        Labels = new XAxisLabels
        {
            Align = HorizontalAligns.Left,
            X=3,Y=3
        }
    };
    settings.YAxis = new List<YAxis>
    {
        new YAxis
        {
            Title = new YAxisTitle
            {
                Enabled = false
            },
            Labels = new YAxisLabels
            {
                Align = HorizontalAligns.Left,
                X = 3,
                Y=16,
                Format = "{value:.,0f}"
            },
            ShowFirstLabel = false
        },
        new YAxis
        {
            LinkedTo = 0,
            GridLineWidth = 0,
            Opposite = true,
            Title = new YAxisTitle
            {
                Enabled = false
            },
            Labels = new YAxisLabels
            {
                Align = HorizontalAligns.Right,
                X = -3,
                Y=16,
                Format = "{value:.,0f}"
            },
            ShowFirstLabel = false
        }
    };
}).Render()